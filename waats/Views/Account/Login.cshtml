@using (Html.BeginForm("Login", "Account", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", @id = "loginform" }))
{
    @Html.AntiForgeryToken()
    <div class="container-fluid vh-100">
        <div class="row p-3 h-100">

            <!-- Left Panel -->
            <div class="col-md-4 left-panel">
                @*<img src="~/Content/images/ADHD-Logo.png" class="img-fluid w-50" />*@
                <img src="~/Content/images/ADHD-InvertLogo.png" class="img-fluid w-50" />
                @*<h5 class="text-uppercase">ADHD</h5>*@
                <div class="description mt-5">
                    <h1 class="fw-bold">Let's set up your daily boost to a healthier You!</h1>
                    <p>
                        Each day, we will help you complete a set of tasks, designed to help reduce any symptoms or
                        trails.
                    </p>
                </div>
            </div>

            <!-- Right Panel -->
            <div class="col-md-8 right-panel">
                <div class="row justify-content-center">
                    <div class="col-md-9 mb-5 pb-5">
                        <h2 class="fw-bold">Welcome back!</h2>
                        <form class="login-custom-page py-5">
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Email" })
                                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="mb-3">
                                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control password-input", @placeholder = "Password", @autocomplete = "off" })
                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div class="form-check">
                                </div>
                                <div class="form-check">
                                    @Html.ActionLink("Forgot your password?", "ForgotPassword", "Account", new { @class = "fw-muted" })
                                </div>
                            </div>
                            <button class="btn login-btn  p-3 w-100 text-light">Login 
                                <i class="fa-solid fa-arrow-right-long ps-2"></i>
                            @*&nbsp; →*@
                            </button>
                            
                            <p class="text-center  mt-5">
                                @Html.ActionLink("Don’t have an account? Let’s get\r\nstarted!", "Register", "Account", new { @class = "text-primary py-3" })
                            </p>
                        </form>
                    </div>
                </div>
            </div>

        </div>
    </div>
