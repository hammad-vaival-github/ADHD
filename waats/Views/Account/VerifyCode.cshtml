@model waats.Models.VerifyCodeViewModel
@{
    ViewBag.Title = "Verify";
    Layout = "~/Views/Shared/_LayoutUnauthed.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="d-none d-sm-block col-sm-2 col-md-3"></div>
        <div class="col-12 col-sm-8 col-md-6">
            <div class="spacer20"></div>
            <div id="logbox" class="card mt-0">
                <div class="card-body">
                    @*<div class="text-center">
                        @Html.ActionLink("Wholly Automated ADHD Triage Service", "Index", "Home", new { area = "" }, new { @class = "navbar-brand fw-semibold" })<br />
                    </div>
                    <hr />*@

                    @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("provider", @Model.Provider)
                        @Html.Hidden("rememberMe", @Model.RememberMe)
                        <div class="alert alert-info" role="alert" style="margin-bottom:5px;">
                            <h6 class="fw-semibold">Enter verification code</h6>
                        </div>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">
                            @Html.LabelFor(m => m.Code, new { @class = "col-md-2 col-form-label" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-2 col-md-10">
                                <div class="checkbox">
                                    @Html.CheckBoxFor(m => m.RememberBrowser)
                                    @Html.LabelFor(m => m.RememberBrowser)
                                </div>
                            </div>
                        </div>
                        <br /><br />
                        <div class="row">
                            <div class="offset-md-2 col-md-10">
                                <input type="submit" class="btn btn-primary" value="Submit" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
