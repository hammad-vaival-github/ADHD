<!--      Current Tabs -->
<div class="mt-4">
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="sectionZero-tab-pane" role="tabpanel"
             aria-labelledby="sectionZero-tab" tabindex="0">
            <div class="mainDataTablePage">
                <div class="row">
                    <div class="col-md-3">
                        <h4 class="mainTitleUnderDatatable">
                            Brain Fitness <i data-bs-toggle="tooltip"
                                             data-bs-placement="top"
                                             title="Define clear goals for each task.Break down complex tasks into steps."
                                             class="fa-solid fa-circle-info ms-2"></i>
                        </h4>
                    </div>
                    <div class="col-md-9">
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-outline-primary me-3" id="AllBrainFitness">
                                <i class="fa-solid fa-circle-plus me-2"></i>
                                Timeline of all Brain Fitness added
                            </button>
                            <button class="btn btn-outline-primary me-3" id="reset">
                                <i class="fa-solid fa-circle-plus me-2"></i>
                                Reset
                            </button> @*id="AddBrainFitness"*@
                            <button class="btn btn-primary brainExerciseDrawer" data-bs-toggle="offcanvas"
                                    data-bs-target="#brainExerciseDrawer">
                                <i class="fa-solid fa-circle-plus me-2"></i>
                                Load
                                Exercise
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="alert alert-secondary" role="alert">
                            <h5> What to do?</h5>
                            <p>
                                Complete the arithmetic exercises five times following the instructions
                                below.
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                            <h5>@Html.ValidationSummary("", new { @class = "text-danger" })</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="table-responsive">
                            <table id="tbBrainFitness" class="display" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>Starting Number</th>
                                        <th>Add</th>
                                        <th>Take</th>
                                        <th>Answer</th>
                                        <th>Date & Time</th>
                                        <th>Status</th>
                                        <th>No. of Attempts</th>
                                    </tr>
                                </thead>
                                <tbody>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="tab-pane fade" id="sectionOne-tab-pane" role="tabpanel"
     aria-labelledby="profile-tab" tabindex="0">
</div>

@section scripts {
    <script src="~/Scripts/BrainFitness.js"></script>
}
