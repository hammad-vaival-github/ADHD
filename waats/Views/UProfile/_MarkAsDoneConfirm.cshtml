@{
    ViewBag.Title = "Complete confirm";
    Layout = "~/Views/Shared/_LayoutUnauthed.cshtml";
}

<h6 class="card-title">Are you sure you want to mark following task as completed</h6>
<br />
 <span class="h6">Title :</span>@ViewBag.TaskTitle
<br/>
<span class="h6">Creation date :</span>@ViewBag.dat

<div class="row">
    <div class="col-md-12 mt-3">
        <div class="text-start float-end">
            <button type="button" class="btn btn-secondary me-3" data-bs-dismiss="modal">Close</button>
            @{
                if (ViewBag.MainTaskID != null && ViewBag.MainTaskID > -1 && @ViewBag.SubLocalID!=null)
                {
                    <button type="button" id="@ViewBag.SubLocalID" data-bs-dismiss="modal" class="btn  btn-primary SaveCompletedSubTask">Yes</button>
                }
                else
                {
                    <button type="button" id="@ViewBag.localID" data-bs-dismiss="modal" class="btn  btn-primary SaveCompletedTask">Yes</button>
                }
            }

        </div>
    </div>
</div>